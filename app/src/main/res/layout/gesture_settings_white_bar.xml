<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/ios_bar_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/white_bar_gesture"
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <LinearLayout
            style="@style/card_view"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/card_title"
                    android:text="@string/ios_bar" />

                <CheckBox
                    android:id="@+id/landscape_ios_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/landscape" />

                <CheckBox
                    android:id="@+id/portrait_ios_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="@string/portrait" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_label"
                    android:minWidth="80dp"
                    android:text="向左滑动" />

                <Button
                    android:id="@+id/ios_bar_slide_left"
                    style="@style/btn_handler_picker"
                    android:text="@string/edge_action" />

                <TextView
                    style="@style/setting_label"
                    android:text="向右滑动" />

                <Button
                    android:id="@+id/ios_bar_slide_right"
                    style="@style/btn_handler_picker"
                    android:text="@string/edge_action" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_label"
                    android:text="向上滑动" />

                <Button
                    android:id="@+id/ios_bar_slide_up"
                    style="@style/btn_handler_picker"
                    android:text="@string/edge_action" />

                <TextView
                    style="@style/setting_label"
                    android:text="上滑悬停" />

                <Button
                    android:id="@+id/ios_bar_slide_up_hover"
                    style="@style/btn_handler_picker"
                    android:text="@string/edge_action" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_label"
                    android:text="轻触" />

                <Button
                    android:id="@+id/ios_bar_touch"
                    style="@style/btn_handler_picker"
                    android:text="@string/edge_action" />

                <TextView
                    style="@style/setting_label"
                    android:text="长按" />

                <Button
                    android:id="@+id/ios_bar_press"
                    style="@style/btn_handler_picker"
                    android:text="@string/edge_action" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/card_view"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                style="@style/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="横屏" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_label"
                    android:layout_height="wrap_content"
                    android:text="宽度/颜色" />

                <SeekBar
                    android:id="@+id/ios_bar_width_landscape"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="100"
                    android:min="0"
                    android:paddingEnd="6dp" />

                <Button
                    android:id="@+id/ios_bar_color_landscape"
                    style="@style/btn_color_picker" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_label"
                    android:layout_height="wrap_content"
                    android:text="淡出不透明度" />

                <SeekBar
                    android:id="@+id/ios_bar_alpha_fadeout_landscape"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="100"
                    android:min="0"

                    android:paddingEnd="6dp" />

                <Button
                    android:id="@+id/ios_bar_color_fadeout_landscape"
                    style="@style/btn_color_picker" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_label"
                    android:layout_height="wrap_content"
                    android:text="底部间距" />

                <SeekBar
                    android:id="@+id/ios_bar_margin_bottom_landscape"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:max="30"
                    android:min="0"

                    android:paddingEnd="6dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/card_view"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                style="@style/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="竖屏" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_label"
                    android:layout_height="wrap_content"
                    android:text="宽度/颜色" />

                <SeekBar
                    android:id="@+id/ios_bar_width_portrait"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="100"
                    android:min="0"

                    android:paddingEnd="6dp" />

                <Button
                    android:id="@+id/ios_bar_color_portrait"
                    style="@style/btn_color_picker" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_label"
                    android:layout_height="wrap_content"
                    android:text="淡出不透明度" />

                <SeekBar
                    android:id="@+id/ios_bar_alpha_fadeout_portrait"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="100"
                    android:min="0"

                    android:paddingEnd="6dp" />

                <Button
                    android:id="@+id/ios_bar_color_fadeout_portrait"
                    style="@style/btn_color_picker" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_label"
                    android:layout_height="wrap_content"
                    android:text="底部间距" />

                <SeekBar
                    android:id="@+id/ios_bar_margin_bottom_portrait"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:max="30"
                    android:min="0"

                    android:paddingEnd="6dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/card_view"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                style="@style/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="通用" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_label"
                    android:layout_height="wrap_content"
                    android:text="阴影效果" />

                <SeekBar
                    android:id="@+id/ios_bar_size_shadow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="5"
                    android:min="0"

                    android:paddingEnd="6dp" />

                <Button
                    android:id="@+id/ios_bar_color_shadow"
                    style="@style/btn_color_picker" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_label"
                    android:layout_height="wrap_content"
                    android:text="描边效果" />

                <SeekBar
                    android:id="@+id/ios_bar_size_stroke"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="5"
                    android:min="0"

                    android:paddingEnd="6dp" />

                <Button
                    android:id="@+id/ios_bar_color_stroke"
                    style="@style/btn_color_picker" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_label"
                    android:layout_height="wrap_content"
                    android:text="线条粗细" />

                <SeekBar
                    android:id="@+id/ios_bar_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:max="12"
                    android:min="0"

                    android:paddingEnd="6dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/card_view"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/card_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="锁屏时隐藏" />

                <Switch
                    android:id="@+id/ios_bar_lock_hide"
                    style="@style/btn_handler_picker"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:orientation="horizontal">

                <TextView
                    style="@style/card_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="连续切换" />

                <Switch
                    android:id="@+id/ios_bar_consecutive"
                    style="@style/btn_handler_picker"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                style="@style/switch_desc"
                android:text="通过左右滑动切换应用时，悬停可连续切换" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/card_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="避免遮挡输入法" />

                    <Switch
                        android:id="@+id/ios_input_avoid"
                        style="@style/btn_handler_picker"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/card_view"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/card_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="随界面自动变色(增强模式)" />

                <Switch
                    android:id="@+id/ios_bar_auto_color_root"
                    style="@style/btn_handler_picker"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:orientation="horizontal">

                <TextView
                    style="@style/card_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="随电量调整颜色" />

                <Switch
                    android:id="@+id/ios_bar_pop_battery"
                    style="@style/btn_handler_picker"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>