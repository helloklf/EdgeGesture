<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/other_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/other_settings"
            android:fontFamily="sans-serif-light"
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <LinearLayout
            style="@style/card_view"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    style="@style/card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/back_home_animation" />

                <Button
                    android:id="@+id/back_home_animation"
                    style="@style/btn_handler_picker"
                    android:text="@string/animation_mode_default"
                    android:textAlignment="textEnd" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    style="@style/card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/app_switch_animation" />

                <Button
                    android:id="@+id/app_switch_animation"
                    style="@style/btn_handler_picker"
                    android:text="@string/animation_mode_default"
                    android:textAlignment="textEnd" />
            </LinearLayout>
            <TextView
                style="@style/switch_desc"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="6dp"
                android:text="@string/animation_mode_desc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:orientation="horizontal">

                <TextView
                    style="@style/card_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/game_optimization" />

                <Switch
                    android:id="@+id/game_optimization"
                    android:layout_width="60dp"
                    android:layout_weight="@null"
                    style="@style/btn_handler_picker"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:orientation="horizontal">

                <TextView
                    style="@style/card_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/root_get_recents" />

                <Switch
                    android:id="@+id/root_get_recents"
                    android:layout_width="60dp"
                    android:layout_weight="@null"
                    style="@style/btn_handler_picker"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/card_view"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/app_switch_exclusive" />

                    <TextView
                        style="@style/switch_desc"
                        android:layout_marginTop="6dp"
                        android:text="@string/app_switch_exclusive_desc" />
                </LinearLayout>

                <Button
                    android:id="@+id/app_switch_exclusive"
                    android:layout_width="60dp"
                    android:layout_weight="@null"
                    style="@style/btn_handler_picker"
                    android:text="@string/choose_app"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/card_view"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/hide_start_icon" />

                    <TextView
                        style="@style/switch_desc"
                        android:text="@string/hide_start_icon_desc" />
                </LinearLayout>
                <Switch
                    android:id="@+id/hide_start_icon"
                    android:layout_width="60dp"
                    android:layout_weight="@null"
                    style="@style/btn_handler_picker"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/window_watch" />

                    <TextView
                        style="@style/switch_desc"
                        android:text="@string/window_watch_desc" />
                </LinearLayout>
                <Switch
                    android:id="@+id/window_watch"
                    android:layout_width="60dp"
                    android:layout_weight="@null"
                    style="@style/btn_handler_picker"
                    android:textAlignment="center" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:orientation="horizontal">

                <TextView
                    style="@style/card_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/low_power" />

                <Switch
                    android:id="@+id/low_power"
                    android:layout_width="60dp"
                    android:layout_weight="@null"
                    style="@style/btn_handler_picker"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>